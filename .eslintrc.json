{
  "extends": ["next/core-web-vitals", "next/typescript", "eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "rules": {
    "no-var": "off", // Allow "var" (not recommended but kept as per your current config)
    "@typescript-eslint/no-explicit-any": "warn", // Warn on "any" types to encourage better typing
    "@typescript-eslint/no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }], // Warn on unused variables, but ignore those starting with "_"
    "react/react-in-jsx-scope": "off", // React import not required in new JSX transform
    "no-console": "warn" // Warn about console.log statements in code
  }
}
